@model User;

@{
    ViewBag.Title = "Profile";
    Layout = "_Layout";
}

<main class="flex flex-col h-screen w-full justify-center items-center">
    <div class="bg-[#F7F7F7] p-8 w-full max-w-sm rounded-2xl shadow-xl border-1">
        <h2 class="text-2xl font-semibold mb-6 text-center text-gray-700">Profile</h2>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm mb-2">Email</label>
            <span class="text-gray-700 font-semibold text-md mb-2">@Model.Email</span>
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm mb-2">Name</label>
            <span class="text-gray-700 font-semibold text-md mb-2">@Model.Name</span>
        </div>

        <div class="mb-6">
            <label class="block text-gray-700 text-sm mb-2">Date of birth</label>
            <span class="text-gray-700 font-semibold text-md mb-2">@Model.DateOfBirth</span>
        </div>

        <a asp-action="EditProfile"
           class="hover:text-white w-full text-center bg-blue-600 hover:bg-blue-700 py-2 px-4 w-full rounded-xl text-white inline-block">
            Edit profile
        </a>

    </div>
</main>