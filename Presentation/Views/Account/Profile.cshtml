@model User;

@{
    ViewBag.Title = "Profile";
    Layout = "_Layout";
}

<main class="flex flex-col h-screen w-full justify-center items-center">
    <div class="bg-[#F7F7F7] p-8 rounded-xl shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-semibold mb-6 text-center text-blue-500">Profile</h2>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
            <input type="text" value="@Model.Email" readonly
                   class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"/>
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">Name</label>
            <input type="text" value="@Model.Name" readonly
                   class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"/>
        </div>

        <div class="mb-6">
            <label class="block text-gray-700 text-sm font-bold mb-2">Date of birth</label>
            <input type="text" value="@Model.DateOfBirth.ToString("dd-MM-yyyy")" readonly
                   class="appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"/>
        </div>

        <div class="mt-6 w-full justify-center items-center">
            <a asp-action="EditProfile">Edit profile</a>
        </div>
    </div>
</main>